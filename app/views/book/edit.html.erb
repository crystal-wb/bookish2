<form action="/update" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value='<%=@book.id%>'>
    <input class="form-control" type="text" name="title" placeholder="Title" value='<%=@book.title%>'>
    <textarea class="form=control" name="description" placeholder="Description"><%=@book.description%></textarea>
    <input class="form-control" type="text" name="date" placeholder="YYYY_MM-DD" value='<%=@book.date%>'>
    <input class="form-control" type="text" name="author" placeholder="Author" value='<%=@book.author%>'>
    <input class="form-control" type="text" name="genre" placeholder="genre" value='<%=@book.genre%>'>
    <input class="form-control" type="text" name="url" placeholder="Url" value='<%=@book.url%>'>
    <input class="form-control" type="submit" value="Save">
</form>